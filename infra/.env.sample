# =============================================================================
# IAB Docs Bot - Environment Configuration Sample
# =============================================================================
# Copy this file to .env and fill in the actual values.
# DO NOT commit .env to version control.
# =============================================================================

# Google Cloud Project
GCP_PROJECT="your-gcp-project-id"
GCP_REGION="asia-northeast1"

# Pub/Sub
PUBSUB_TOPIC="slack-events"

# Slack App (get from https://api.slack.com/apps)
SLACK_BOT_TOKEN="xoxb-your-bot-token"
SLACK_SIGNING_SECRET="your-signing-secret"

# Google AI Studio (get from https://aistudio.google.com/app/apikey)
GEMINI_API_KEY="your-gemini-api-key"
GEMINI_MODEL="gemini-3-flash-preview"

# MCP Server
MCP_URL="https://iab-docs.apti.jp/mcp"
